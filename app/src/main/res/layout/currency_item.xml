<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" tools:layout_editor_absoluteY="81dp"
>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="124dp"
            android:orientation="vertical"/>


    <TextView
            android:text="TextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/currencyIsim"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            android:textStyle="bold" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currencyCode"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/currencyIsim" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="67dp"
            android:layout_height="21dp"
            android:id="@+id/currencyUnit"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:width="45dp"
            android:id="@+id/currencyBuying"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            android:layout_marginEnd="112dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="112dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="TextView"
            android:layout_width="65dp"
            android:layout_height="17dp"
            android:width="45dp"
            android:id="@+id/currencySelling"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="12dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/currencyBuying"/>
</android.support.constraint.ConstraintLayout>